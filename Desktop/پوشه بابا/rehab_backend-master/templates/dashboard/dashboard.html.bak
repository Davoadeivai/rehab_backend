<style>
    :root {
        --primary: #4361ee;
        --primary-light: #eef2ff;
        --secondary: #7c3aed;
        --success: #10b981;
        --info: #3b82f6;
        --warning: #f59e0b;
        --danger: #ef4444;
        --dark: #1f2937;
        --light: #f9fafb;
        --gray: #6b7280;
        --gray-light: #e5e7eb;
        --border-radius: 12px;
        --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        --transition: all 0.3s ease;
    }

    /* Base Styles */
    body {
        background-color: #f5f7fa;
        color: #1f2937;
        font-family: 'Vazir', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        line-height: 1.6;
    }

    /* Card Styles */
    .card {
        background: white;
        border-radius: var(--border-radius);
        box-shadow: var(--shadow);
        transition: var(--transition);
        margin-bottom: 1.5rem;
        border: 1px solid rgba(0, 0, 0, 0.05);
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        padding: 1.25rem 1.5rem;
        border-bottom: 1px solid var(--gray-light);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .card-title {
        font-size: 1.1rem;
        font-weight: 600;
        margin: 0;
        color: var(--dark);
    }

    .card-body {
        padding: 1.5rem;
    }

    /* Stat Cards */
    .stat-card {
        text-align: center;
        padding: 1.5rem;
        border-radius: var(--border-radius);
        background: white;
        box-shadow: var(--shadow);
        transition: var(--transition);
        border-top: 4px solid var(--primary);
        height: 100%;
    }

    .stat-card.primary { border-top-color: var(--primary); }
    .stat-card.success { border-top-color: var(--success); }
    .stat-card.warning { border-top-color: var(--warning); }
    .stat-card.danger { border-top-color: var(--danger); }

    .stat-icon {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1rem;
        font-size: 1.5rem;
        color: white;
    }

    .stat-card.primary .stat-icon { background: var(--primary); }
    .stat-card.success .stat-icon { background: var(--success); }
    .stat-card.warning .stat-icon { background: var(--warning); }
    .stat-card.danger .stat-icon { background: var(--danger); }

    .stat-value {
        font-size: 1.8rem;
        font-weight: 700;
        margin: 0.5rem 0;
        color: var(--dark);
    }

    .stat-label {
        color: var(--gray);
        font-size: 0.9rem;
        margin: 0;
    }

    /* Activity Feed */
    .activity-item {
        display: flex;
        padding: 1rem 0;
        border-bottom: 1px solid var(--gray-light);
        align-items: flex-start;
    }

    .activity-item:last-child {
        border-bottom: none;
    }

    .activity-icon {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-left: 1rem;
        color: white;
        flex-shrink: 0;
    }

    .activity-content {
        flex-grow: 1;
    }

    .activity-title {
        font-weight: 500;
        margin: 0 0 0.25rem;
        color: var(--dark);
    }

    .activity-desc {
        color: var(--gray);
        font-size: 0.9rem;
        margin: 0 0 0.25rem;
    }

    .activity-time {
        font-size: 0.8rem;
        color: var(--gray);
    }

    /* Charts */
    .chart-container {
        position: relative;
        height: 300px;
        width: 100%;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .stat-card {
            margin-bottom: 1rem;
        }
        
        .card-body {
            padding: 1rem;
        }
    }

    /* Stock Progress Bar */
    .stock-progress {
        height: 6px;
    }
    
    .stock-progress .progress-bar {
        width: 100%;
    }
    
    /* Stock Progress Widths */
    .stock-progress-100 { width: 100%; }
    .stock-progress-90 { width: 90%; }
    .stock-progress-80 { width: 80%; }
    .stock-progress-70 { width: 70%; }
    .stock-progress-60 { width: 60%; }
    .stock-progress-50 { width: 50%; }
    .stock-progress-40 { width: 40%; }
    .stock-progress-30 { width: 30%; }
    .stock-progress-20 { width: 20%; }
    .stock-progress-10 { width: 10%; }
    
    /* Custom Scrollbar */
    ::-webkit-scrollbar {
        width: 6px;
        height: 6px;
    }

    ::-webkit-scrollbar-track {
        background: #f1f1f1;
    }

    ::-webkit-scrollbar-thumb {
        background: #c1c1c1;
        border-radius: 3px;
    }

    ::-webkit-scrollbar-thumb:hover {
        background: #a8a8a8;
    }
</style>
    
